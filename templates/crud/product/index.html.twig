{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

{% for category in categories %}
{{ category.name }}
{% endfor %}
{% for  product in products|sort((a, b) => a.category <=> b.category)|column('name')%}
<p>{{ product.name }}</p>
{% endfor %}

        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td><img src="{{ asset('/images/' ~ product.image) }}" alt="product image" style="height: 150px; width: 200px"/></td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }} â‚¬</td>
                <td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn" href="{{ path('product_show', {'id': product.id}) }}">Show</a>
                        <a class="btn" href="{{ path('product_edit', {'id': product.id}) }}">Edit</a>
                    {% elseif not is_granted('ROLE_EMPLOYEE') %}
                        <a class="btn" href="{{ path('product_edit', {'id': product.id}) }}">Cart</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('product_new') }}">Create new</a>
{% endblock %}
