<form method="post" style="display: inline" action="{{ path('status_delete', {'id': status.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ status.id) }}">
    <button class="btn-delete">Delete</button>
</form>
