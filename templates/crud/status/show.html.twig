{% extends 'base.html.twig' %}

{% block title %}Status{% endblock %}

{% block body %}
    <h1>Status</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ status.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ status.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ status.number }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn" href="{{ path('status_index') }}">Back to list</a>

    <a class="btn" href="{{ path('status_edit', {'id': status.id}) }}">Edit</a>

    {{ include('crud/status/_delete_form.html.twig') }}
{% endblock %}
