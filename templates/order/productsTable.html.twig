<tr class="order{{ order.id }}" ><td colspan="5">
    <table class="table">
        <tbody>
        {% for product in products %}
            {% for prod in product %}
                {% if prod.cart.id == order.cart.id %}
                    <tr>
                        <td><img src="{{ asset('images/' ~ prod.product.image) }}" alt="Product image" style="width: 150px; height: 100px;"/></td>
                        <td>{{ prod.product.name }}</td>
                        <td>{{ prod.product.description }}</td>
                        <td>Amount: {{ prod.amount }}</td>
                        <td>{{ prod.product.price }} â‚¬</td>
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPLOYEE') %}
                            <td>{{ include('order/_delete_form.html.twig') }}</td>
                        {% endif %}
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>
    </td>
</tr>